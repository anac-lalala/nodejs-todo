<!DOCTYPE html>
<html lang="en">
  <%- include('header'); -%>
  <body>
    <div id="heading" class="box">
      <h1><%= listTitle %></h1>
    </div>
    <div class="box">
      <% taskList.forEach((task)=>{ %>
      <div class="item">
        <input type="checkbox" />
        <p><%= task %></p>
      </div>
      <% }) %>

      <form class="item" action="/" method="post">
        <input
          type="text"
          name="newTask"
          id="newTask"
          placeholder="Add New Task"
        />
        <button type="submit" name="listName" value="<%= listTitle %>">
          +
        </button>
      </form>
    </div>
    <%- include('footer'); -%>
  </body>
</html>
