<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>To Do list for today</title>
    <link rel="stylesheet" href="styles.css" />
  </head>
  <body>
    <div id="heading" class="box">
      <h1><%= listTitle %></h1>
    </div>
    <div class="box">
      <% taskList.forEach((task)=>{ %>
      <div class="item">
        <input type="checkbox" />
        <p><%= task %></p>
      </div>
      <% }) %>

      <form class="item" action="/" method="post">
        <input
          type="text"
          name="newTask"
          id="newTask"
          placeholder="Add New Task"
        />
        <button type="submit" name="listName" value="<%= listTitle %>">
          +
        </button>
      </form>
    </div>
  </body>
</html>
