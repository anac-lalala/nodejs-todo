<!DOCTYPE html>
<html lang="en">
  <%- include('header'); -%>
  <body>
    <div id="heading" class="box">
      <h1><%= listTitle %></h1>
    </div>
    <div class="box">
      <% taskList.map((task)=>{ %>
      <form action="delete" method="post">
        <div class="item">
          <input
            type="checkbox"
            name="checkDelete"
            value="<%= task._id %>"
            onchange="this.form.submit()"
          />
          <p><%= task.taskName %></p>
          <input type="hidden" name="checkList" value="<%= listTitle %>" />
        </div>
      </form>
      <% }) %>

      <form class="item formContainer" action="/" method="post">
        <input
          type="text"
          name="newTask"
          id="newTask"
          placeholder="Add New Task"
        />
        <button type="submit" name="btnAdd" value="<%= listTitle %>">+</button>
      </form>
    </div>
    <%- include('footer'); -%>
  </body>
</html>
